<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/map_background">

    <TextView
        android:id="@+id/textViewLabelSelected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/selected"/>

    <ListView
        android:id="@+id/listWifiAPSelected"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:fadeScrollbars="false"
        android:layout_below="@+id/textViewLabelSelected"
        android:divider="@android:color/transparent"/>


    <TextView
        android:id="@+id/textViewLabelNear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listWifiAPSelected"
        android:text="@string/near_wifi_aps"/>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textViewLabelNear"
        android:divider="@android:color/transparent"/>

</RelativeLayout>
